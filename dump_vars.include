#!/bin/bash

VARS=(
    PULL
    PUSH
    AUTOCOMMIT
    PROJECT_DIRS
    JUST_LISTDIRS
    NO_OPTIONS
    GIT_AUTOUPDATE
    DEFAULT_DIRFILE
    DIRFILE
    AUTODISCOVER_CONFIG
    AUTODISCOVER
    READ_DIRS
    IGNORE_ERROS
)

function dump_vars()
{
    local out
    for v in "${VARS[@]}"
    do
        # info "var | $v=${!v}"
        printf -v out "var | %-20.20s : %s" ${v} ${!v}
        info "${out}"
    done
}