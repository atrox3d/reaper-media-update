#!/bin/bash

#
# read input PROJECT_DIRS from file into array
#
function list_dirs()
{
	info "reading from ${DIRFILE}..."
	PROJECT_DIRS=($(cat "${DIRFILE}" | sort))
	info "found ${#PROJECT_DIRS[@]} PROJECT_DIRS:"

	for d in "${PROJECT_DIRS[@]}"
	do
		info "${d}"
	done
	
	if $JUST_LISTDIRS
	then
		exit
	fi
}
